<div class="filter_panel{{= this.displayed ? ' filter_panel--active' : '' }}">
  <ul>
    {{~ this.categories:category:i }}
      <li>

        <input type="checkbox" id="{{= `_${this.panel.cid}${i}` }}" value="{{= category }}">
        <label for="{{= `_${this.panel.cid}${i}` }}">{{= category }}</label>

      </li>

    {{~}}

  </ul>

</div>