<div class="favorites_panel favorites_panel--hidden">
  <div {{= click(this.close, this) }} class="favorite_panel__close">ðŸž¨</div>
  <div class="favorite_panel__container">
  <div class="favorite_panel__image_header"></div>

    <h3 class="favorite_panel__container__title">
      {{= _n('%d favorites places', '%d favorite place', this.favoritePois.length, 'favorite panel') }}
    </h3>

    <button class="favorite_panel__filter" {{= click(this.toggleFilter, this) }}>{{= _('filter', 'favorite panel') }}</button>
    {{= this.filterPanel.render() }}

    {{? this.favoritePois.length !== 0 }}
      <ul>
        <li class="favorite_panel__item">

          <div class="favorite_panel__swipe_window">
            <div class="favorite_panel__swipe_flow--{{= this.favoritePois.length }}">

              {{~ this.favoritePois:poi:i }}
                <div class="favorite_panel__swipe_element">

                  <div class="favorite_panel__item__info">
                    <p class="favorite_panel__item__title">
                      {{= poi.title ? poi.title : 'default' }}
                    </p>
                    <p class="favorite_panel__item__desc">
                        {{= poi.description ? poi.description.replace(/_/g, ' ') : '' }}
                    </p>
                  </div>

                  <div class="favorite_panel__item__actions">
                    <button class="favorite_panel__remove favorite_panel__action" {{= click(this.del, this, poi) }}>Ã—</button>
                    <button class="favorite_panel__go favorite_panel__action" {{= click(this.go, this, poi) }}>â–¶</button>
                  </div>

                </div>
              {{~}}

            </div>
          </div>
        </li>
      </ul>
      <button class="favorite_panel__clear" onclick="fire('store_clear')">Clear</button>
    {{?}}
  </div>
</div>
