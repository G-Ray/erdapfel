<div {{= this.active ? 'style="left:0"' : 'style="left:-300px"' }} class="poi_panel">
  <div class="poi_panel__close" {{= click(this.close, this) }} >ðŸž¨</div>
  {{? this.poi }}
    <div class="poi_panel__logo_demo"></div>
    <div class="poi_panel__description_container">
      <h4 class="poi_panel__title">{{= this.poi.title }}</h4>
      {{? this.poi.description }}
        <p class="poi_panel__description">{{= this.poi.description.replace(/_/g, ' ') }}</p>
      {{?}}
    </div>

    <div class="poi_panel__info">
      {{~ this.poi.tags:tag }}
        <div class="poi_panel__info__section poi_panel__info__section--{{= tag.name }}">


          <p class="poi_panel__info__section__description">

            {{? tag.name === 'opening_hours' && tag.value }}
              <h4 class="poi_panel__info__section__title">{{= tag.name }}</h4>

              {{? this.computeRemainingTime(tag.value) > 0 && this.computeRemainingTime(tag.value) < 60}}
                <div class="poi_panel__info__hours_status poi_panel__info__hours_status--closing" {{= click(this.openHours, this) }}>Closing soon 	â—‹</div>
              {{?? this.computeRemainingTime(tag.value) > 0  }}
                <div class="poi_panel__info__hours_status poi_panel__info__hours_status--open" {{= click(this.openHours, this) }}>Open 	â—‹</div>
              {{??}}
                 <div class="poi_panel__info__hours_status poi_panel__info__hours_status--closed" {{= click(this.openHours, this) }}>Closed 	â—‹</div>
              {{?}}

              <div class="poi_panel__info__hours">
                <table>

                  {{~ Object.keys(tag.value):day }}
                    <tr>
                      <td class="day">{{= day }}</td>
                      <td class="hours"> {{? tag.value[day] }} {{= (tag.value[day] + '').replace(',', ' - ') }} {{??}} - no - {{?}}<td>
                    </tr>
                  {{~}}

                </table>
              </div>

              {{?? tag.name === 'happy_hours' && tag.value }}
                <h4 class="poi_panel__info__section__title">{{= tag.name }}</h4>

                {{? this.computeRemainingTime(tag.value) > 0  }}
                  <div class="poi_panel__info__hours_status poi_panel__info__hours_status--open" {{= click(this.openHours, this) }}>In progress</div>
                {{??}}
                  <div class="poi_panel__info__hours_status poi_panel__info__hours_status--open" {{= click(this.openHours, this) }}>Not now</div>
                {{?}}

                  <div class="poi_panel__info__hours">
                    <table>
                      {{~ Object.keys(tag.value):day }}
                        <tr>
                          <td class="day">{{= day }}</td>
                          <td class="hours"> {{? tag.value[day] }} {{= (tag.value[day] + '').replace(',', ' - ') }} {{??}} - no - {{?}}<td>
                        </tr>
                      {{~}}
                    </table>
                  </div>

              {{?? tag.name === 'brewery' }}
                <h4 class="poi_panel__info__section__title">{{= tag.name }}</h4>
                {{~ tag.value.split(';'):beer }}
                  <p class="poi_panel__info__beer">{{= beer }}</p>
                {{~}}
              {{?? tag.name.indexOf('phone') !== -1 }}
                <h4 class="poi_panel__info__section__title">{{= tag.name }}</h4>
                <a  data-rel="external" href="{{= tag.value }}">{{= tag.value }}</a>
              {{?? tag.name === 'website' }}
                <h4 class="poi_panel__info__section__title">{{= tag.name }}</h4>
                <a href="{{= tag.value }}" no-follow>{{= tag.value }}</a>
              {{?}}

          </p>
          <br>

        </div>
      {{~}}
    </div>

    <div class="poi_panel__store_status">
      {{? this.poi.stored }}â˜…{{??}}â˜†<button class="poi_panel__store_status__add" {{= click(this.storePoi, this) }}>Add to favorite</button>{{?}}
    </div>
  {{?}}
</div>

